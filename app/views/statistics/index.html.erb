<h1> <%= @team1 %> (<%= @statistics.first.hg %>) : <%= @team2 %> (<%= @statistics.first.ag %>)</h1>

<table border="1">

<!-- <%= debug  params %> -->
<!-- <%= debug  @statistics %> -->
<tr>
	<th>Game Time</th>
	<th>Home Goals</th>
	<th>Away Goals</th>
    <th>Home Attacks</th>
	<th>Away Attacks</th>
	<th>Home Possession</th>
	<th>Away Possession</th>
	<th>Home Shots On Target</th>
	<th>Away Shots On Target</th>
    <th>Home Corners</th>
	<th>Away Corners</th>
</tr>

	<% @statistics.each do |statistic| %>
<tr>
	<th><%= statistic.gametime %></th>
	<th><%= statistic.hg %></th>
	<th><%= statistic.ag %></th>
	<th><%= statistic.ha %></th>
	<th><%= statistic.aa %></th>
	<th><%= statistic.hpn %></th>
	<th><%= statistic.apn %></th>	
	<th><%= statistic.hsont %></th>
	<th><%= statistic.asont %></th>
    <th><%= statistic.hco %></th>
	<th><%= statistic.aco %></th>	
</tr>
	<% end %>
